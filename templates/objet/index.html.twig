{% extends 'base.html.twig' %}

{% block title %}Liste des Objets{% endblock %}

{% block body %}
    <h1 onclick="countClick()">Liste Des Objets</h1>

    <table id="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Pays</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="tbody">
        {% for objet in objets %}
            <tr>
                <td>{{ objet.id }}</td>
                <td>{{ objet.Nom }}</td>
                <td class="tdimg" style="background-image:url({{ objet.image }}); height: 100px; width: 100px; background-size: contain; background-repeat: no-repeat;"{{ objet.Image }}</td>
                <td>{{ objet.Pays }}</td>
                <td style="word-wrap: break-word; width: 800px;">{{ objet.Description }}</td>
                <td>
                    <button><a href="{{ path('objet_show', {'id': objet.id}) }}">show</a></button>
                    <button><a href="{{ path('objet_edit', {'id': objet.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    

    <button style="margin-top: 15px; height: 30px"><a href="{{ path('objet_new') }}">Create new</a></button>
{% endblock %}
{% block style %}
    <style>
        button a {
            text-decoration: none;
            color: black;
        }
        button{
            background-color: #dfdfdf;
        }
        h1{
            display: flex;
            justify-content: center;
            color: white;
        }
        table{
            background-color: rgba(255, 255, 255, 0.73);
            position: relative;
            width: 100%;
            height: 100%;
        }

        @keyframes example {
            0%   {left:0px; top:0px;}
            25%   {left:0px; top:200px;}
            50%  {left:200px; top:200px;}
            50%  {left:200px; top:0px;}
            100% {left:0px; top:0px;}
        }
        body{
            background: linear-gradient(to bottom, #1d2d44, #d7d5d5);
            background-size:cover;
            opacity: 0.8;
        }
        th{
            text-align: left;
        }
                    .tdimg:hover {
             /* Start the shake animation and make the animation last for 0.5 seconds */
             animation: shake 0.5s;

            /* When the animation is finished, start again */
            animation-iteration-count: infinite;
                }

            @keyframes shake {
                0% { transform: translate(10px, 10px) rotate(0deg); }
                10% { transform: translate(-10px, -20px) rotate(-10deg); }
                20% { transform: translate(-30px, 0px) rotate(10deg); }
                30% { transform: translate(30px, 20px) rotate(0deg); }
                40% { transform: translate(10px, -10px) rotate(10deg); }
                50% { transform: translate(-10px, 20px) rotate(-10deg); }
                60% { transform: translate(-30px, 10px) rotate(0deg); }
                70% { transform: translate(30px, 10px) rotate(-10deg); }
                80% { transform: translate(-10px, -10px) rotate(10deg); }
                90% { transform: translate(10px, 20px) rotate(0deg); }
                100% { transform: translate(10px, -20px) rotate(-10deg); }
            }
        td{
            vertical-align: top;
        }
    </style>
{% endblock %}

{% block script %}
    let clicks = 0

    function countClick() {
    clicks++;
    if(clicks === 10){
    let table = document.getElementById("table")
    table.style.animationName = "example";
    table.style.animationDuration = "4s";
    }
    }
{% endblock %}
