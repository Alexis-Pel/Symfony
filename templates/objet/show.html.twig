{% extends 'base.html.twig' %}

{% block title %}Objet{% endblock %}

{% block body %}
    <div id="bodyShow">
        <h1>Objet</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id :</th>
                <td class="tdShow">{{ objet.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td class="tdShow">{{ objet.Nom }}</td>
            </tr>
            <tr>
                <th>Image :</th>
                <td class="tdShow"><img src="{{ objet.Image }}" style="width: 250px"></td>
            </tr>
            <tr>
                <th>Pays :</th>
                <td class="tdShow">{{ objet.Pays }}</td>
            </tr>
            <tr>
                <th>Description :</th>
                <td class="tdShow">{{ objet.Description }}</td>
            </tr>
            </tbody>
        </table>

        <div class="btnShow" >
            <button><a class="btnEditShow"href="{{ path('objet_edit', {'id': objet.id}) }}">Edit</a></button>
            {{ include('objet/_delete_form.html.twig') }}
        </div>


        <a class="returnList" href="{{ path('objet_index') }}"><div class="fleche">‚Üê</div></a>
    </div>

{% endblock %}

{% block style %}
    <style>
        html{
            height: 100%;
            background: linear-gradient(to bottom, #0D1B2B, #7C90AD);
        }
        #bodyShow {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 70%;
            margin: 40px auto auto auto;
            border-radius: 10px;
            box-shadow: 0px 0px 10px black;
            background-color: #E6E7E4;
        }
        .tdShow{
            text-align: center;
        }
        .btnShow{
            display: flex;
            justify-content: space-around;
            width: 90%;
            margin-top: 20px;
        }
        .btnEditShow{
            text-decoration: none;
            color: black;
        }
        .returnList{
            margin-right: auto;
            margin-left: 15px;
            margin-bottom: 5px;
            text-decoration: none;
        }
        .fleche{
            font-size: 35px;
        }
        .fleche:hover{
            zoom: 1.1;
        }
        button:hover{
            cursor: pointer;
        }
    </style>
{% endblock %}
